<AnchorPane maxHeight="64.0" onMouseClicked="#handleTaskClicked" style="-fx-background-color: #282828;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.greenboard.controllers.tasks.TaskCardController">
    <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
               <image>
                  <Image url="@../../icons/google.png" />
               </image>
            </ImageView>
            <VBox>
               <children>
                        <Label fx:id="nameLabel" text="Name" textFill="WHITE" />
                        <Label fx:id="descriptionLabel" prefWidth="200.0" text="Description" textFill="WHITE" />
                  <HBox spacing="10.0">
                     <children>
                              <Label fx:id="statusLabel" prefHeight="18.0" prefWidth="65.0" text="Status" textFill="WHITE" />
                        <Label fx:id="priorityLabel" prefHeight="18.0" prefWidth="67.0" text="Priority" textFill="WHITE" />
                     </children>
                  </HBox>
                  <Label fx:id="usersLabel" prefHeight="18.0" prefWidth="188.0" />
               </children>
            </VBox>
         </children>
      </HBox>
    </children>

</AnchorPane>
