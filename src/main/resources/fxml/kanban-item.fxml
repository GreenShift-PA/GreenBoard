<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefWidth="260.0" styleClass="kanban-item"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="com.greenshift.greenboard.controllers.KanBanItemController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox fx:id="titleHBox" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <children>
                        <FontIcon fx:id="icon" iconColor="#a6a299" iconLiteral="fas-file">
                            <HBox.margin>
                                <Insets top="5.0"/>
                            </HBox.margin>
                        </FontIcon>
                        <Label fx:id="title" styleClass="kanban-item-title" text="Find a free host for the application"
                               textFill="#54524e" wrapText="true">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <HBox fx:id="actionsHBox" alignment="CENTER_RIGHT" prefWidth="0.0"
                              styleClass="kanban-item-actions" HBox.hgrow="ALWAYS">
                            <children>
                                <FontIcon iconColor="#a6a299" iconLiteral="mdi2c-cursor-text" iconSize="12"
                                          styleClass="kanban-item-action"/>
                                <FontIcon iconColor="#a6a299" iconLiteral="fas-ellipsis-h" iconSize="12"
                                          styleClass="kanban-item-action"/>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </HBox>
                    </children>
                </HBox>
                <HBox fx:id="assigneesHBox" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <children>
                        <ImageView fx:id="userPfp" fitHeight="12.0" fitWidth="12.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../logos/Greenshift.png"/>
                            </image>
                        </ImageView>
                        <Label fx:id="userDisplayName" text="Eh Eh">
                            <font>
                                <Font size="9.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox fx:id="projectHBox" layoutX="10.0" layoutY="61.0" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <children>
                        <FontIcon fx:id="projectIcon" iconColor="#84c9c9" iconLiteral="anto-global"/>
                        <Label fx:id="projectName" text="Serveur Multijoueur" textFill="#a6a299">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox fx:id="dueDateHBox" layoutX="10.0" layoutY="43.0" spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <children>
                        <Label fx:id="dueDate" text="May 1">
                            <font>
                                <Font size="9.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
