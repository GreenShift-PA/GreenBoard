<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="com.greenshift.greenboard.controllers.CreateTeamController">
    <children>
        <VBox layoutY="-20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Create a new Team">
                    <font>
                        <Font name="Roboto" size="24.0"/>
                    </font>
                </Label>
                <Label prefHeight="41.0" prefWidth="430.0"
                       text="Team serves to organize and manages your organization users" textFill="#6f6d6d"
                       wrapText="true">
                    <font>
                        <Font name="Roboto" size="13.0"/>
                    </font>
                </Label>
                <VBox prefHeight="223.0" prefWidth="560.0" spacing="20.0">
                    <children>
                        <VBox>
                            <children>
                                <HBox spacing="20.0">
                                    <children>
                                        <VBox prefHeight="41.0" prefWidth="560.0">
                                            <children>
                                                <Label text="Icon &amp; name" textFill="#656363"/>
                                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0"
                                                      spacing="10.0">
                                                    <children>
                                                        <FontIcon iconColor="#bcb3b3" iconLiteral="mdi2a-alpha-g"
                                                                  iconSize="24"/>
                                                        <TextField fx:id="nameTextField" promptText="e.g: Frontend..."
                                                                   HBox.hgrow="ALWAYS"/>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                        <VBox prefHeight="41.0" prefWidth="560.0">
                                            <children>
                                                <Label text="Color" textFill="#656363"/>
                                                <HBox spacing="10.0">
                                                    <children>
                                                        <ColorPicker fx:id="colorPicker"/>
                                                        <TextField fx:id="colorTextField" promptText="#fff"/>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox prefHeight="171.0" prefWidth="560.0">
                            <children>
                                <Label text="Description" textFill="#656363"/>
                                <TextArea fx:id="descriptionTextArea" prefHeight="156.0" prefWidth="560.0"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <VBox prefHeight="89.0" prefWidth="560.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Label text="Users"/>
                                <CheckComboBox fx:id="userCheckComboBox" prefHeight="27.0" prefWidth="508.0"/>
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <HBox fx:id="user" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0"
                                      spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <FontIcon iconColor="#727272" iconLiteral="anto-question-circle" iconSize="24"/>
                                        <Label text="Learn about teams" textFill="#545454"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                                    <children>
                                        <JFXButton fx:id="createButton" prefHeight="31.0" prefWidth="192.0"
                                                   text="Create Team" textFill="WHITE">
                                            <graphic>
                                                <FontIcon iconColor="WHITE" iconLiteral="mdi2n-new-box" iconSize="24"/>
                                            </graphic>
                                        </JFXButton>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</AnchorPane>
